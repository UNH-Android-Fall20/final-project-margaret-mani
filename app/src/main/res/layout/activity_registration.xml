<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/gradient_color"
  android:scaleType="fitXY"
  tools:context=".Registration">

  <TextView
    android:id="@+id/tv_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="67dp"
    android:fontFamily="sans-serif-black"
    android:text="@string/registration"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@android:color/darker_gray"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/txt_userFirstName"
    android:layout_width="339dp"
    android:layout_height="32dp"
    android:layout_marginTop="40dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/first_name"
    android:importantForAutofill="no"
    android:inputType="textPersonName"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="@+id/tv_register"
    app:layout_constraintTop_toBottomOf="@+id/tv_register" />

  <EditText
    android:id="@+id/txt_userLastName"
    android:layout_width="339dp"
    android:layout_height="32dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/last_name"
    android:importantForAutofill="no"
    android:inputType="textPersonName"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_userFirstName" />

  <EditText
    android:id="@+id/txt_email"
    android:layout_width="339dp"
    android:layout_height="32dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/email_address"
    android:importantForAutofill="no"
    android:inputType="textEmailAddress"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_userLastName" />

  <EditText
    android:id="@+id/txt_phoneNumber"
    android:layout_width="156dp"
    android:layout_height="32dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/phone_number"
    android:importantForAutofill="no"
    android:inputType="phone"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_email" />

  <EditText
    android:id="@+id/txt_zipCode"
    android:layout_width="148dp"
    android:layout_height="32dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/zip_code"
    android:importantForAutofill="no"
    android:inputType="text"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toEndOf="@+id/txt_phoneNumber"
    app:layout_constraintTop_toBottomOf="@+id/txt_email" />

  <EditText
    android:id="@+id/txt_password"
    android:layout_width="339dp"
    android:layout_height="32dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/password"
    android:importantForAutofill="no"
    android:inputType="textPassword"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_phoneNumber" />

  <EditText
    android:id="@+id/txt_confirmPassword"
    android:layout_width="339dp"
    android:layout_height="32dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/confirm_password"
    android:importantForAutofill="no"
    android:inputType="textPassword"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_password" />

  <EditText
    android:id="@+id/txt_searchLimit"
    android:layout_width="250dp"
    android:layout_height="32dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_button_round"
    android:hint="@string/preferred_search_zone_in_miles"
    android:importantForAutofill="no"
    android:inputType="number"
    android:textAllCaps="false"
    android:textColor="#003700"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_confirmPassword" />

  <Button
    android:id="@+id/b_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="148dp"
    android:layout_marginTop="52dp"
    android:background="@drawable/custom_button_round"
    android:gravity="center"
    android:text="@string/register"
    android:textAllCaps="false"
    android:textColor="#000109"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_searchLimit" />

  <TextView
    android:id="@+id/tv_userButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="104dp"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:text="@string/already_user"
    android:textColor="@android:color/darker_gray"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_searchLimit" />

  <ProgressBar
    android:id="@+id/pb_progress"
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="168dp"
    android:layout_marginTop="16dp"
    android:foregroundGravity="center_horizontal"
    android:visibility="invisible"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/b_register" />


</androidx.constraintlayout.widget.ConstraintLayout>

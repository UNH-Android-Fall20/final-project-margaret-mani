<LinearLayout
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    andriod:layout_gravity="center"
    andriod:gravity="top"
    andriod:orientation="vertical">

    <TextView
        andriod:id="@+id/question_text_view"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center"
        andriod:gravity="top"
        andriod:padding="24dp"
        tools:text="@string/welcome_string" />

    <Button
        andriod:id="@+id/sellButton"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center"
        andriod:gravity="center"
        andriod:text="@string/sell_button" />
    <Button
        andriod:id="@+id/buyButton"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center"
        andriod:gravity="center"
        andriod:text="@string/buy_button" />

    <Button
        andriod:id="@+id/b_addProduct"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center"
        andriod:layout_marginTop="250dp"
        andriod:gravity="center"
        andriod:text= "@string/add_button" />


</LinearLayout>
